  <body>
      <h1 class="heading1">Registration Number Webapp</h1>
      <h2 class="heading2">Enter a Registration Number:</h2>
    <form class="inputForm" action="/reginumbers/add" method="post">
        <input class="regiInput" type="text" name="regiInput" placeholder="Registration Number..." />
        <input id="enterButton" type="submit" name="enterButton" value="Add">
    {{!-- </form> --}}

      {{!-- <form class="filterForm" action="/reginumbers" method="post"> --}}
        <div class="radioButtons">
          <input type="radio" name="radioButt" value="capetown"> Cape Town
          <input type="radio" name="radioButt" value="bellville"> Bellville
          <input type="radio" name="radioButt" value="malmesbury"> Malmesbury
          <input type="radio" name="radioButt" value="malmesbury"> Malmesbury
          <input id="filterButton" type="submit" name="filterButt" value="Fliter">
        </div>
      </form>

    {{#if messages.info}}
      <div class="info">
        {{messages.info}}
      </div>
    {{/if}}

    {{#if messages.error}}
      <div class="error">
        {{messages.error}}
      </div>
    {{/if}}

    <div class="regiOutput">
      <ul>
        {{#each regiDisplay}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>


  </body>